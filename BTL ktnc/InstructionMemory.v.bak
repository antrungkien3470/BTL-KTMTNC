module InstructionMemory (
    input [31:0] address,
    output [31:0] instruction
);
    reg [31:0] mem [0:63]; // Bộ nhớ lệnh 64 từ, mỗi từ 32-bit

    initial begin
        $readmemh("D:/BTL ktnc/program.hex", mem); // Đọc từ program.hex
    end

    assign instruction = mem[address[7:2]]; // Chia địa chỉ cho 4 (byte -> word)
endmodule